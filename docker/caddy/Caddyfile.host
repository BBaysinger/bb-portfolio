:80 {
    # Admin routes go to host backend
    handle /admin* {
        reverse_proxy host.docker.internal:3001
    }
    
    # API routes go to host backend
    handle /api/* {
        reverse_proxy host.docker.internal:3001
    }
    
    # Everything else goes to host frontend
    handle {
        reverse_proxy host.docker.internal:3000
    }
}