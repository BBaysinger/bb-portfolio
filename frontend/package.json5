/**
 * Because I often need comments in my package list (though it's kind of an extra step to
 * keep them in sync.)
 *
 * Copy changes from package.json, then run npm run prepare-package to generate a new package.json.
 * Compare the output to make sure it matches.
 */
{
  name: "bb-portfolio",
  private: true,
  version: "0.0.0",
  type: "module",
  description: "Online F/E developer portfolio built in React.",
  author: "Bradley Baysinger",
  license: "MIT",
  scripts: {
    // Pretty build. Run before a commit. Ensures prettier hasn't broken anything, which it can.
    pb: "prettier --write . && tsc -b && vite build",
    dev: "vite",
    build: "vite build",
    lint: "eslint .",
    preview: "vite preview",
    format: "prettier --write .",
    deploy: "vite build && npx netlify deploy --dir=dist --prod",
    "prepare-package": "node -e \"require('fs').writeFileSync('./package.json', JSON.stringify(require('json5').parse(require('fs').readFileSync('./package.json5', 'utf8')), null, 2))\"",
  },
  dependencies: {
    exenv: "^1.2.2",
    mitt: "^3.0.1",
    react: "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router": "^7.1.1",
    "react-router-dom": "^7.1.1",
    "@reduxjs/toolkit": "^2.5.0",
    // Vite stuff here for Netflify deploy.
    vite: "^6.0.6",
    "vite-tsconfig-paths": "^5.1.4",
    "@vitejs/plugin-react-swc": "^3.7.2",
  },
  devDependencies: {
    "@eslint/js": "^9.17.0",
    "@types/exenv": "^1.2.2",
    "@types/node": "^22.10.2",
    "@types/react": "^19.0.2",
    "@types/react-dom": "^19.0.2",
    "@types/react-scroll": "^1.8.10",
    "@typescript-eslint/eslint-plugin": "^8.18.2",
    "@typescript-eslint/parser": "^8.18.2",
    eslint: "^9.17.0",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.16",
    globals: "^15.14.0",
    "netlify-cli": "^17.38.1",
    prettier: "^3.4.2",
    sass: "^1.83.0",
    typescript: "~5.7.2",
    json5: "^2.2.3",
  },
  engines: {
    // Causes an incorrect error in Netlify, but it's what I'm using locally anyhow.
    node: ">=23.4.0",
    npm: ">=11.0.0",
  },
  repository: {
    type: "git",
    url: "https://github.com/bbaysinger/bb-portfolio.git",
  },
  keywords: [
    "portfolio",
    "react",
    "vite",
    "typescript",
    "slideshow",
    "interactive",
    "dynamic-routing",
    "responsive-design",
    "frontend",
    "web-development",
    "react-router",
    "ui-components",
    "front-end-development",
    "design",
    "developer-portfolio",
    "carousel",
    "infinite-scrolling",
  ],
}
