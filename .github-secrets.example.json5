// Example GitHub Actions secrets manifest (DO NOT include real credentials)
// Use scripts/sync-github-secrets.ts to push these to your repo's GitHub Secrets.
// Keep the real .github-secrets.json5 out of git (see .gitignore).
{
  strings: {
    // =============================
    // Cloud provider / registry
    // =============================
    AWS_ACCESS_KEY_ID: "<aws-access-key-id>",
    AWS_SECRET_ACCESS_KEY: "<aws-secret-access-key>",
    DOCKER_HUB_USERNAME: "<dockerhub-username>",
    DOCKER_HUB_ACCESS_TOKEN: "<dockerhub-access-token>",

    // =============================
    // Backend (Payload) runtime
    // =============================
    DEV_MONGODB_URI: "mongodb+srv://<user>:<pass>@<cluster>.mongodb.net/bb-portfolio-dev?retryWrites=true&w=majority",
    PROD_MONGODB_URI: "mongodb+srv://<user>:<pass>@<cluster>.mongodb.net/bb-portfolio-prod?retryWrites=true&w=majority",
    DEV_PAYLOAD_SECRET: "<dev-payload-secret>",
    PROD_PAYLOAD_SECRET: "<prod-payload-secret>",

    // Frontend origin allowlists for CORS/CSRF (prefix-first)
    DEV_FRONTEND_URL: "https://dev.example.com",
    PROD_FRONTEND_URL: "https://example.com",

    // =============================
    // Frontend (Next.js) build-time
    // =============================
    // Docker DNS + internal port used by rewrites & server fetch
    DEV_FRONTEND_BACKEND_INTERNAL_URL: "http://backend-dev:3000",
    PROD_FRONTEND_BACKEND_INTERNAL_URL: "http://backend-prod:3000",

    // Optional SMTP config (only used if all are present)
    DEV_SMTP_HOST: "smtp.dev.example.com",
    DEV_SMTP_USER: "smtp-user",
    DEV_SMTP_PASS: "smtp-pass",
    PROD_SMTP_HOST: "smtp.example.com",
    PROD_SMTP_USER: "smtp-user",
    PROD_SMTP_PASS: "smtp-pass",

    // Optional: explicit required-environment variables per profile for prebuild guard (prefix-first)
    PROD_REQUIRED_ENVIRONMENT_VARIABLES: "BACKEND_INTERNAL_URL|BACKEND_URL|NEXT_PUBLIC_BACKEND_URL|NEXT_PUBLIC_API_URL",

    // =============================
    // S3 (optional, if Payload uses S3 storage)
    // =============================
    APP_AWS_ACCESS_KEY_ID: "<app-iam-access-key>",
    APP_AWS_SECRET_ACCESS_KEY: "<app-iam-secret>",
    AWS_S3_REGION: "us-west-2",
    DEV_S3_BUCKET: "bb-portfolio-assets-dev",
    PROD_S3_BUCKET: "bb-portfolio-assets-prod",

    // =============================
    // Deployment targets
    // =============================
    EC2_HOST: "ec2-xx-xx-xx-xx.us-west-2.compute.amazonaws.com",
  },
  files: {
    // Private SSH key for EC2 access (local path expanded by sync script)
    EC2_SSH_KEY: "~/.ssh/bb-portfolio-site-key.pem",
  },
}
