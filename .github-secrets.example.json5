// Shared GitHub secrets manifest (base layer)
// -------------------------------------------------------
// - Sync with: npm run sync:secrets:base (targets repo-wide secrets)
// - Store the real values in .github-secrets.private.json5 (gitignored)
// - Per-environment manifests define the same key names (no DEV_/PROD_ prefixes)
// - Use .github-secrets.private.<env>.json5 for environment-specific overrides
{
  strings: {
    // AWS credentials shared by all workflows (Terraform, S3 migrations, etc.)
    AWS_ACCESS_KEY_ID: "AKIA_SHARED_EXAMPLE",
    AWS_SECRET_ACCESS_KEY: "sharedAwsSecretExample",

    // Shared project buckets (Terraform outputs)
    PUBLIC_PROJECTS_BUCKET: "bb-portfolio-projects-public",
    NDA_PROJECTS_BUCKET: "bb-portfolio-projects-nda",

    // Security.txt metadata consumed by backend + CLI tools
    SECURITY_TXT_EXPIRES: "2026-12-31T23:59:59.000Z",

    // ACME / Let's Encrypt account email (used by orchestrator during cert issuance)
    ACME_REGISTRATION_EMAIL: "you@bbaysinger.com",

    // Docker Hub publishing credentials (used for dev images)
    DOCKER_HUB_USERNAME: "yourusername",
    DOCKER_HUB_PASSWORD: "dckr_pat_1234567890abcdefghijklmnopqrstuvwxyz",
    DOCKER_HUB_ACCESS_TOKEN: "dckr_pat_0987654321zyxwvutsrqponmlkjihgfedcba",

    // CloudWatch RUM identifiers (frontend needs the same values across environments)
    // IMPORTANT: This must be the UUID app monitor ID (AppMonitor.Id), not the monitor name.
    // Example: "695867fc-ba34-4a53-a940-a215bfa72a22"
    NEXT_PUBLIC_RUM_APP_MONITOR_ID: "00000000-0000-0000-0000-000000000000",
    NEXT_PUBLIC_RUM_IDENTITY_POOL_ID: "us-west-2:00000000-0000-0000-0000-000000000000",
    NEXT_PUBLIC_RUM_GUEST_ROLE_ARN: "arn:aws:iam::123456789012:role/bb-portfolio-rum-unauth-role",
    NEXT_PUBLIC_RUM_REGION: "us-west-2",

    // Optional: extra RUM console logging (non-production only)
    NEXT_PUBLIC_RUM_DEBUG: "false",

    // Env guard lists (consumed by CI + local env checks)
    // - Preferred: split by target so frontend does not inherit backend-only secrets.
    REQUIRED_ENVIRONMENT_VARIABLES_FRONTEND: "BACKEND_INTERNAL_URL,PUBLIC_PROJECTS_BUCKET,NDA_PROJECTS_BUCKET,NEXT_PUBLIC_ENV_PROFILE",
    REQUIRED_ENVIRONMENT_VARIABLES_BACKEND: "MONGODB_URI,AWS_REGION,SES_FROM_EMAIL|SMTP_FROM_EMAIL,SES_TO_EMAIL,FRONTEND_URL,PAYLOAD_SECRET,S3_BUCKET,PUBLIC_PROJECTS_BUCKET,NDA_PROJECTS_BUCKET,SECURITY_TXT_EXPIRES,BACKEND_INTERNAL_URL",
    // Shared database + Payload secret (override per-env manifests if needed)
    MONGODB_URI: "mongodb+srv://username:password@cluster0.example.mongodb.net/bb-portfolio?retryWrites=true&w=majority&appName=bb-portfolio",
    PAYLOAD_SECRET: "0123456789abcdef0123456789abcdef0123456789abcdef0123456789abcdef",

    // Defaults for origin/internal URLs (per-env files can override)
    FRONTEND_URL: "https://bbaysinger.com",
    BACKEND_INTERNAL_URL: "http://bb-portfolio-backend-prod:3000",
    AWS_REGION: "us-west-2",
    S3_BUCKET: "bb-portfolio-media-prod",
  },

  files: {
    // Private key path for EC2 SSH fallback workflows (never committed)
    EC2_SSH_KEY: "~/.ssh/your-portfolio-site-key.pem",
  },
}
