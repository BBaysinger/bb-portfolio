// Example GitHub Actions secrets manifest (DO NOT include real credentials)
// Use scripts/sync-github-secrets.ts to push these to your repo's GitHub Secrets.
// Keep the real .github-secrets.private.json5 out of git (see .gitignore).
{
  strings: {
    // =============================================================================
    // CI/CD AWS CREDENTIALS
    // =============================================================================
    // GitHub Actions deployment credentials (AWS Console > IAM > Users)
    CICD_AWS_ACCESS_KEY_ID: "<cicd-aws-access-key-id>",
    CICD_AWS_SECRET_ACCESS_KEY: "<cicd-aws-secret-access-key>",

    // =============================================================================
    // S3 STORAGE CREDENTIALS & CONFIGURATION
    // =============================================================================
    // S3-only IAM credentials for Payload CMS media uploads
    S3_AWS_ACCESS_KEY_ID: "<s3-iam-access-key>",
    S3_AWS_SECRET_ACCESS_KEY: "<s3-iam-secret>",

    // Environment-specific AWS regions for Payload S3 adapter
    DEV_AWS_REGION: "us-west-2",
    PROD_AWS_REGION: "us-west-2",

    // S3 buckets for media uploads (provisioned by Terraform - see infra/ outputs)
    DEV_S3_BUCKET: "bb-portfolio-media-dev",
    PROD_S3_BUCKET: "bb-portfolio-media-prod",

    // =============================================================================
    // DATABASE CONFIGURATION
    // =============================================================================
    // MongoDB Atlas connection strings (Atlas > Database > Connect > Connection String)
    DEV_MONGODB_URI: "mongodb+srv://<user>:<pass>@<cluster>.mongodb.net/bb-portfolio-dev?retryWrites=true&w=majority",
    PROD_MONGODB_URI: "mongodb+srv://<user>:<pass>@<cluster>.mongodb.net/bb-portfolio-prod?retryWrites=true&w=majority",

    // =============================================================================
    // PAYLOAD CMS CONFIGURATION
    // =============================================================================
    // Payload CMS encryption secrets (generated or set manually)
    DEV_PAYLOAD_SECRET: "<dev-payload-secret>",
    PROD_PAYLOAD_SECRET: "<prod-payload-secret>",

    // Frontend origins for CORS/CSRF validation (maps to backend/src/payload.config.ts)
    DEV_FRONTEND_URL: "https://dev.example.com",
    PROD_FRONTEND_URL: "https://example.com",

    // =============================================================================
    // DOCKER & CONTAINER REGISTRY
    // =============================================================================
    // Docker Hub credentials for image publishing (Docker Hub > Account Settings)
    DOCKER_HUB_USERNAME: "<dockerhub-username>",
    DOCKER_HUB_ACCESS_TOKEN: "<dockerhub-access-token>",

    // =============================================================================
    // DEPLOYMENT & INFRASTRUCTURE
    // =============================================================================
    // EC2 instance for deployment (AWS Console > EC2 > Instances)
    EC2_HOST: "ec2-xx-xx-xx-xx.us-west-2.compute.amazonaws.com",

    // Public backend URLs accessible during GitHub Actions build (for generateStaticParams)
    // These allow build-time data fetching when backend containers aren't running yet
    DEV_BACKEND_URL: "https://dev.example.com",
    PROD_BACKEND_URL: "https://example.com",

    // Optional: environment variable validation during CI builds (prebuild guard)
    // Only include variables that cause SILENT FAILURES if missing (not obvious errors)
    // Example: BACKEND_INTERNAL_URL missing = broken API calls, DATABASE missing = obvious connection error
    DEV_REQUIRED_ENVIRONMENT_VARIABLES: "S3_AWS_ACCESS_KEY_ID|S3_AWS_SECRET_ACCESS_KEY|DEV_AWS_REGION|DEV_S3_BUCKET|DEV_FRONTEND_URL",
    PROD_REQUIRED_ENVIRONMENT_VARIABLES: "S3_AWS_ACCESS_KEY_ID|S3_AWS_SECRET_ACCESS_KEY|PROD_AWS_REGION|PROD_S3_BUCKET|PROD_FRONTEND_URL",
  },

  files: {
    // =============================================================================
    // SSH KEYS
    // =============================================================================
    // Private SSH key for EC2 deployment access (AWS Console > EC2 > Key Pairs)
    // NOTE: This file path will be expanded by the sync script when uploading
    EC2_SSH_KEY: "~/.ssh/bb-portfolio-site-key.pem",
  },
}
