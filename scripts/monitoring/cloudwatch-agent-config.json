{
  "agent": {
    "metrics_collection_interval": 60,
    "run_as_user": "root"
  },
  "metrics": {
    "namespace": "BB-Portfolio/Host",
    "aggregation_dimensions": [["InstanceId"]],
    "metrics_collected": {
      "cpu": {
        "measurement": ["cpu_usage_idle", "cpu_usage_user", "cpu_usage_system"],
        "metrics_collection_interval": 60,
        "resources": ["*"]
      },
      "mem": {
        "measurement": ["mem_used_percent"],
        "metrics_collection_interval": 60
      },
      "disk": {
        "measurement": ["disk_used_percent"],
        "metrics_collection_interval": 60,
        "resources": ["/", "/var"]
      },
      "net": {
        "measurement": ["bytes_in", "bytes_out"],
        "metrics_collection_interval": 60,
        "resources": ["eth0"]
      }
    }
  },
  "logs": {
    "logs_collected": {
      "files": {
        "collect_list": [
          {
            "file_path": "/var/log/nginx/access.log",
            "log_group_name": "/bb-portfolio/nginx/access",
            "log_stream_name": "{instance_id}"
          },
          {
            "file_path": "/var/log/nginx/error.log",
            "log_group_name": "/bb-portfolio/nginx/error",
            "log_stream_name": "{instance_id}"
          },
          {
            "file_path": "/var/log/secure",
            "log_group_name": "/bb-portfolio/system/secure",
            "log_stream_name": "{instance_id}"
          },
          {
            "file_path": "/var/log/fail2ban.log",
            "log_group_name": "/bb-portfolio/fail2ban",
            "log_stream_name": "{instance_id}"
          }
        ]
      }
    },
    "log_stream_name": "{instance_id}",
    "force_flush_interval": 15
  }
}
