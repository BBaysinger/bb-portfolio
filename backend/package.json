{
  "name": "bb-portfolio-backend",
  "version": "1.0.0",
  "description": "A blank template to get started with Payload 3.0",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "precommit": "prettier --write . && tsc -b",
    "prebuild": "tsx ./scripts/check-required-env.ts",
    "predev": "tsx ./scripts/check-required-env.ts && npm run generate:importmap",
    "backfill:project-codes": "tsx ./scripts/backfill-project-codes.ts",
    "backfill:nda-media": "tsx ./scripts/backfill-nda-media.ts",
    "backfill:nda-media:mongo": "tsx ./scripts/backfill-nda-media.mongo.ts",
    "build": "cross-env NODE_OPTIONS=\"--no-deprecation --max-old-space-size=8000\" npm run generate:importmap && next build --webpack",
    "dev": "cross-env NODE_OPTIONS=--no-deprecation npm run generate:importmap && next dev -p ${PORT:-3000}",
    "devsafe": "rm -rf .next && cross-env NODE_OPTIONS=--no-deprecation next dev",
    "generate:importmap": "cross-env NODE_OPTIONS=--no-deprecation payload generate:importmap",
    "generate:types": "cross-env NODE_OPTIONS=--no-deprecation payload generate:types",
    "lint": "cd .. && eslint backend",
    "payload": "cross-env NODE_OPTIONS=--no-deprecation payload",
    "prestart": "tsx ./scripts/check-required-env.ts",
    "start": "cross-env NODE_OPTIONS=--no-deprecation next start",
    "test": "pnpm run test:int && pnpm run test:e2e",
    "test:e2e": "cross-env NODE_OPTIONS=\"--no-deprecation --no-experimental-strip-types\" pnpm exec playwright test",
    "test:int": "cross-env NODE_OPTIONS=--no-deprecation vitest run --config ./vitest.config.mts"
  },
  "dependencies": {
    "@aws-sdk/client-ses": "^3.968.0",
    "@aws-sdk/types": "^3.968.0",
    "@payloadcms/db-mongodb": "3.71.1",
    "@payloadcms/email-nodemailer": "3.71.1",
    "@payloadcms/next": "3.71.1",
    "@payloadcms/payload-cloud": "3.71.1",
    "@payloadcms/richtext-lexical": "3.71.1",
    "@payloadcms/storage-s3": "3.71.1",
    "@payloadcms/ui": "3.71.1",
    "cross-env": "^10.1.0",
    "dotenv": "17.2.3",
    "express": "^5.2.1",
    "graphql": "^16.12.0",
    "json5": "^2.2.3",
    "next": "16.1.1",
    "payload": "3.71.1",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "sharp": "0.34.5",
    "slugify": "^1.6.6"
  },
  "devDependencies": {
    "@playwright/test": "1.57.0",
    "@testing-library/react": "16.3.1",
    "@types/express": "^5.0.6",
    "@types/json5": "^2.2.0",
    "@types/node": "^25.0.8",
    "@types/react": "19.2.8",
    "@types/react-dom": "19.2.3",
    "@vitejs/plugin-react": "5.1.2",
    "baseline-browser-mapping": "^2.9.14",
    "eslint": "^9.39.2",
    "eslint-config-next": "16.1.1",
    "jsdom": "27.4.0",
    "playwright": "1.57.0",
    "playwright-core": "1.57.0",
    "prettier": "^3.7.4",
    "tsx": "^4.21.0",
    "typescript": "5.9.3",
    "vite-tsconfig-paths": "6.0.4",
    "vitest": "4.0.17"
  },
  "overrides": {
    "nodemailer": "7.0.12"
  },
  "engines": {
    "node": "^18.20.2 || >=20.9.0",
    "pnpm": "^9 || ^10"
  },
  "onlyBuiltDependencies": [
    "sharp",
    "esbuild",
    "unrs-resolver"
  ]
}
